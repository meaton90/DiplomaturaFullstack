<div class="container" style="margin: 100px auto">
    <div class="mb-3 row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" name="id" value="{{novedad.id}}">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo"
                        value="{{novedad.titulo}}">
                </div>
                <div class="mb-3">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="mb-3">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>