<div class="container" style="margin: 100px auto">
    <div class="mb-3 row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3">
                    <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control"
                        name="titulo">
                </div>
                <div class="mb-3">
                    <textarea type="text" class="form-control" placeholder="Subtitulo"
                        name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="mb-3">
                    <textarea type="text" class="form-control" placeholder="Cuerpo"
                        name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="mb-3">
                    <p>
                        <label for="">Imagen: <input type="file" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label for=""><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_orginal" value="{{novedad.img_id}}" />
                    </p>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>